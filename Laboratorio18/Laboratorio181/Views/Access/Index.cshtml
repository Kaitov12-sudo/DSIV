@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form id="loginForm" method="post" action="/Access/Login">
    <div>
        <label>Email:</label>
        <input type="text" name="email" required />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Login</button>
</form>

